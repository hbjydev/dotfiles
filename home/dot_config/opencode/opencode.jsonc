{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",

  // Model config
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",

  // MCP Servers
  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "sequential_thinking": {
      "type": "local",
      "command": ["bunx", "@modelcontextprotocol/server-sequential-thinking"]
    }
  },

  // LSP Servers
  "lsp": {
    "roslyn": {
      "command": ["roslyn", "--logLevel=Information", "--extensionLogDirectory=/home/hayden/.local/state/opencode/lsp/roslyn", "--stdio"],
      "extensions": [".cs"]
    }
  },

  // Other
  "share": "disabled",
  "instructions": ["AGENTS.md", "CONTRIBUTING.md", ".github/copilot-instructions.md", "CLAUDE.md"]
}
