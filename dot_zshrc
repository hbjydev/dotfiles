# oh-my-zsh configuration generated by NixOS
plugins=(git z aws zsh-autosuggestions zsh-syntax-highlighting)
ZSH_THEME="robbyrussell"
source $HOME/.oh-my-zsh/oh-my-zsh.sh

# History options should be set in .zshrc and after oh-my-zsh sourcing.
# See https://github.com/nix-community/home-manager/issues/177.
HISTSIZE="10000"
SAVEHIST="10000"
HISTFILE="$HOME/.zsh_history"
mkdir -p "$(dirname "$HISTFILE")"

setopt HIST_FCNTL_LOCK
setopt HIST_IGNORE_DUPS
unsetopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE
unsetopt HIST_EXPIRE_DUPS_FIRST
setopt SHARE_HISTORY
unsetopt EXTENDED_HISTORY

export PATH="$PATH:$HOME/.local/bin"
if [[ -d "/opt/homebrew" ]]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
fi
if [[ -d "/home/linuxbrew" ]]; then
  eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
fi
if [[ -d "$HOME/.cargo" ]]; then
  . "$HOME/.cargo/env"
fi
if [[ -d "$HOME/.volta" ]]; then
  export PATH="$PATH:$HOME/.volta/bin"
fi
if [[ -d "$HOME/.fly" ]]; then
  export PATH="$PATH:$HOME/.fly/bin"
fi
if [[ -d "$HOME/.deno" ]]; then
  export PATH="$PATH:$HOME/.deno/bin"
fi
if [[ -d "$HOME/.bun" ]]; then
  export PATH="$PATH:$HOME/.bun/bin"
fi
eval "$(direnv hook zsh)"

if [[ $TERM != "dumb" ]]; then
  eval "$(starship init zsh)"
fi

if test -n "$GHOSTTY_RESOURCES_DIR"; then
  autoload -Uz -- "$GHOSTTY_RESOURCES_DIR"/shell-integration/zsh/ghostty-integration
  ghostty-integration
  unfunction ghostty-integration
fi

# Aliases
alias -- cat=bat
alias -- dc='docker compose'
alias -- dcc='docker compose cp'
alias -- dcd='docker compose down'
alias -- dce='docker compose exec'
alias -- dci='docker compose inspect'
alias -- dcl='docker compose logs'
alias -- dclf='docker compose logs -f'
alias -- dcr='docker compose restart'
alias -- dcu='docker compose up'
alias -- eza='eza --icons --git'
alias -- g=git
alias -- k=kubectl
alias -- kj='kubectl -o json'
alias -- kw='kubectl -o wide'
alias -- ky='kubectl -o yaml'
alias -- la='eza -a'
alias -- lg=lazygit
alias -- ll='eza -l'
alias -- lla='eza -la'
alias -- ls=eza
alias -- lt='eza --tree'
alias -- nb='nix build --json --no-link --print-build-logs'
alias -- ops='op run --no-masking'
alias -- s='doppler run'
alias -- tf=terraform
alias -- vi=nvim
alias -- vim=nvim
alias -- watch=viddy
alias -- wt='git worktree'

export EDITOR="nvim"
